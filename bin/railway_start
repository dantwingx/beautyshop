#!/bin/bash
set -e

echo "ðŸš€ Railway Start Script - Bypass All Config Mode"
echo "All environment variables:"
env | grep -E "(PORT|BIND|PUMA|RAILS)" | sort

# Clear any problematic environment variables
unset PUMA_BIND
unset BIND
unset WEB_BIND

# Force clean environment
export RAILS_ENV=production
export PORT=${PORT:-3000}

echo "ðŸ”§ Starting with minimal puma command - no config file"

# Bypass all config files - use direct puma command
exec bundle exec puma -p $PORT -e production